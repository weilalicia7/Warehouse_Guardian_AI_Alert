# Business Guardian AI - Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# =====================================
# CONFLUENT CLOUD (Kafka)
# =====================================
# Get these from: https://confluent.cloud/
CONFLUENT_BOOTSTRAP_SERVER=pkc-xxxxx.us-west-2.aws.confluent.cloud:9092
CONFLUENT_API_KEY=your-api-key-here
CONFLUENT_API_SECRET=your-api-secret-here
CONFLUENT_CLUSTER_ID=lkc-xxxxx

# Schema Registry (if using)
CONFLUENT_SCHEMA_REGISTRY_URL=https://psrc-xxxxx.us-west-2.aws.confluent.cloud
CONFLUENT_SCHEMA_REGISTRY_API_KEY=your-sr-api-key
CONFLUENT_SCHEMA_REGISTRY_API_SECRET=your-sr-api-secret

# =====================================
# GOOGLE CLOUD PLATFORM
# =====================================
GOOGLE_CLOUD_PROJECT=business-guardian-ai
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# Gemini API
GEMINI_API_KEY=your-gemini-api-key

# =====================================
# EXTERNAL APIs
# =====================================
# NewsAPI.org - https://newsapi.org/
NEWS_API_KEY=your-newsapi-key

# Twitter API v2 (optional)
TWITTER_BEARER_TOKEN=your-twitter-bearer-token

# OpenWeatherMap (optional)
OPENWEATHER_API_KEY=your-openweather-key

# =====================================
# APPLICATION SECRETS
# =====================================
# Secret key for QR code cryptographic hashing
QR_SECRET_KEY=change-this-to-a-random-secret-key-min-32-chars

# JWT Secret for API authentication
JWT_SECRET=change-this-to-a-random-jwt-secret-min-32-chars

# API Key for your own API (if needed)
API_KEY=your-internal-api-key

# =====================================
# APPLICATION CONFIGURATION
# =====================================
# Environment (development, staging, production)
NODE_ENV=development

# Backend API URL
BACKEND_API_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000

# Port configurations
BACKEND_PORT=8000
FRONTEND_PORT=3000

# =====================================
# DATABASE (if using)
# =====================================
# BigQuery is primary, but add these if using additional DBs
DATABASE_URL=postgresql://user:password@localhost:5432/business_guardian

# Redis (for caching)
REDIS_URL=redis://localhost:6379

# =====================================
# MONITORING & LOGGING
# =====================================
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Enable debug mode
DEBUG=false

# Sentry (error tracking - optional)
SENTRY_DSN=your-sentry-dsn

# =====================================
# DEMO MODE
# =====================================
# Set to true to use mock data instead of real APIs
DEMO_MODE=true

# Simulate fraud scenarios automatically
AUTO_SIMULATE_ATTACKS=false

# =====================================
# FEATURE FLAGS
# =====================================
# Enable/disable features
ENABLE_EMAIL_ALERTS=false
ENABLE_SMS_ALERTS=false
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_GEMINI_INTEGRATION=true
ENABLE_REAL_TIME_STREAMING=true

# =====================================
# RATE LIMITING
# =====================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =====================================
# CORS
# =====================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://business-guardian-ai.vercel.app
